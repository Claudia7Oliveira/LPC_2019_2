@model ContasStatico.Models.Conta

<div class="form-horizontal">
    <form action="Create" method="Post">

        <div class="form-group">
            <label>Data da leitura:</label>
            <input  class="form-control"
                    type="text" name="dataLeitura"/>
        </div>

        <div class="form-group">
            <label>Numero da leitura:</label>
            <input  class="form-control"
                    type="text" name="numLeitura"/>
        </div>

        <div class="form-group">
            <label>kw Gastos</label>
            <input  class="form-control"
                    type="text" name="kwGasto"/>
        </div>

        <div class="form-group">
            <label>Valor da conta:</label>
            <input  class="form-control"
                    type="text" name="valorConta"/>
        </div>

        <div class="form-group">
            <label>Data do pagamento:</label>
            <input  class="form-control"
                    type="text" name="dataPagamento"/>
        </div>

        <div class="form-group">
            <label>Consumo medio:</label>
            <input  class="form-control"
                    type="text" name="consumoMedio"/>
        </div>

        <input  class="btn btn-primary" 
                type="submit" value="Salvar"/>

    </form>
</div>