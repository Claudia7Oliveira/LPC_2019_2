@model ContasStatico.Models.Conta

<div class="form-horizontal">
    <form action="Create" method="Post">

        <div class="form-group">
            <label>Data da leitura :</label>
            <input  class="form-control"
                    type="text" name="dataLeitura" value="@Model.dataLeitura"/>
        </div>

        <div class="form-group">
            <label>Numero da leitura:</label>
            <input readonly class="form-control"
                    type="text" name="numeroLeitura" value="@Model.numLeitura"/>
        </div>

        <div class="form-group">
            <label>kw Gastos:</label>
            <input  class="form-control"
                    type="text" name="kwGasto" value="@Model.kwGasto"/>
        </div>

        <div class="form-group">
            <label>Valor da conta:</label>
            <input  class="form-control"
                    type="text" name="valorPagar" value="@Model.valorConta"/>
        </div>

        <div class="form-group">
            <label>Data do pagamento: </label>
            <input  class="form-control"
                    type="text" name="dataPagamento" value="@Model.dataPagamento"/>
        </div>

        <div class="form-group">
            <label>Consumo medio: </label>
            <input  class="form-control"
                    type="text" name="mediaConsumo" value="@Model.consumoMedio"/>
        </div>

        <input  class="btn btn-primary" 
                type="submit" value="Salvar"/>

    </form>
</div>