                        <div class="editor-label">
                            Data da eitura
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@Model.menor.dataLeitura.ToString("dd/MM/yyyy")" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            KW Gasto
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@Model.menor.kwGasto" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Valor a pagar
                        </div>
                        <div class="editor-field">
                            <input type="text" value="R$ @Model.menor.valorConta" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Data de pagamento
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@Model.menor.dataPagamento.ToString("dd/MM/yyyy")" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Consumo medio
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@Model.menor.consumoMedio" class="form-control" disabled/>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card">
                <h5 class="card-header">Maior consumo de energia</h5>
                <div class="card-body">
                    <div class="form-group col-12">
                        <div class="editor-label">
                            Data de leitura
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@Model.maior.dataLeitura.ToString("dd/MM/yyyy")" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            KW Gasto
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@Model.maior.kwGasto" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Valor a pagar
                        </div>
                        <div class="editor-field">
                            <input type="text" value="R$ @Model.maior.valorConta" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Data de pagamento
                        </div>
                        <div class="editor-field">
                            <input type="text" value="@Model.maior.dataPagamento.ToString("dd/MM/yyyy")" class="form-control" disabled/>
                        </div>
                    </div>

                    <div class="form-group col-12">
                        <div class="editor-label">
                            Consumo mdeio
